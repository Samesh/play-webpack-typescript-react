    "bootstrap-sass": "3.3.7",
    "jquery": "3.1.1",
    "react": "15.4.2",
    "react-dom": "15.4.2"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/jestPreProcessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "/src/test/typescript/.*\\.(ts|tsx|js)$",
    "moduleDirectories": [
      "node_modules",
      "src/main/typescript",
      "src/test/typescript"
    ],
    "coverageDirectory": "target/jest-coverage"
  }
